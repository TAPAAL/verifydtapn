# For bash on OS X, as /bin/sh is compiled with --enable-strict-posix-default
SHELL    		= /bin/bash

# Programs for processing
LEX				= flex 
YACC				= bison 
CC				= g++ 
CUT				= cut

# Compiler and linker flags
CFLAGS 			= -DNDEBUG -DBOOST_DISABLE_THREADS -DDISABLE_ASSERTX -static -O3 -Wall -mtune=core2

LDFLAGS 		= -DNDEBUG -DBOOST_DISABLE_THREADS -DDISABLE_ASSERTX -static -O3 -Wall -mtune=core2

# Input files
SOURCES			= $(shell find * -name "*.cpp")	
OBJECTS			= $(SOURCES:.cpp=.o)
TARGET			= verifydtapn-linux64

include rules.mk
